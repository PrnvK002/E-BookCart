<div class="container forgot">
    <div class="forgot-box" style="padding-top:1.5rem">
        <div class="heading">
        <ion-icon name="lock-closed-outline"></ion-icon>
        <h3>Create New Password</h3>
        <p>Enter new Password</p>
        </div>
        <form action="/admin/reset_password" method="post">
        <div class="input-form">
        <ion-icon name="mail-outline"></ion-icon>
        <input type="email" name="email" class="input-otp" placeholder="Please enter your email address" id="otp">
        </div>
        <div class="input-form">
        <ion-icon name="lock-closed-outline"></ion-icon>
        <input type="password" name="password" placeholder="Please enter your new password" class="input-otp" id="otp">
        </div>
        <div class="input-form">
        <ion-icon name="lock-closed-outline"></ion-icon>
        <input type="password" name="confirm_password" placeholder="Please confirm your password" class="input-otp" id="otp">
        </div>
        <div class="submit">
            <a href="/admin/forgot-password" class="btn btn-primary">Back</a>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        </form>
        </div>
</div>