<body
  class="img js-fullheight"
>
  <section class="ftco-section">
    <div class="container">
     
      {{#if error}}
        <div id="error-msg" >
          <div id="system-message">
            <div class="alert alert-warning">
              <a class="close" data-dismiss="alert">×</a>

              <h4 class="alert-heading"></h4>
              <div>
                <p>{{error}}</p>
                <p id="error-msg"></p>
              </div>
            </div>
          </div>
        </div>
      {{/if}}
      <div id="error-block" style="display: none;" >
          <div id="system-message">
            <div class="alert alert-warning">
              <a class="close" data-dismiss="alert">×</a>

              <h4 class="alert-heading"></h4>
              <div>
                <p id="error-msg"></p>
              </div>
            </div>
          </div>
      </div>
       <div class="row justify-content-center mb-0">
        <div class="col-md-6 text-center mb-0">
          <h2 class="heading-section">Login</h2>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <div class="login-wrap p-0">
            <h3 class="mb-4 text-center">Have an account?</h3>
            <form action="/login" method="post" class="signin-form" onsubmit="return loginValidation()">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  style="background:transparent;padding:4px"
                  placeholder="Username"
                  name="email"
                  required
                  id="email"
                />
              </div>
              <div class="form-group">
                <input
                  id="password"
                  type="password"
                  style="background:transparent;padding:4px"
                  class="form-control"
                  name="password"
                  placeholder="Password"
                  required

                />
                {{!-- <span
                  toggle="#password-field"
                  class="fa fa-fw fa-eye field-icon toggle-password"
                ></span> --}}
              </div>
              <div class="form-group">
                <button
                  type="submit"
                  class="form-control btn btn-primary submit px-3"
                >
                  Sign In
                </button>
              </div>
              <div class="form-group d-md-flex">
                <div class="w-50 text-md-right">
                  <a href="/signup" >Don't have an account? create now</a>
                </div>
                <div class="w-50 text-md-right">
                  <a href="/forgot-password" >Forgot Password</a>
                </div>
              </div>
            </form>
            <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
            <div class="social text-center" style="display: flex;flex-direction:column">
              <a href="/auth/google" class="px-2 py-2 mr-md-1 rounded"><span
                  class="ion-logo-facebook mr-2"
                ></span>
                Google</a>

               <a href="/login_otp" class="px-2 py-2 mr-md-1 rounded"><span
                  class="ion-logo-facebook mr-2"
                ></span>
                Login With OTP</a>
              {{! <a href="#" class="px-2 py-2 ml-md-1 rounded"><span
                  class="ion-logo-twitter mr-2"
                ></span>
                Twitter</a> }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>